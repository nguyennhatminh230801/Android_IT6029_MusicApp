<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_66"
    android:layout_height="@dimen/dp_66"
    android:layout_margin="@dimen/dp_10"
    android:elevation="@dimen/dp_15"
    app:cardCornerRadius="@dimen/dp_40">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_question_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/dp_15"
        app:strokeWidth="@dimen/dp_3"
        app:cardCornerRadius="@dimen/dp_30"
        android:layout_margin="@dimen/dp_3"
        app:cardBackgroundColor="?attr/backgroundColorForBottomSheet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_question_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/comfortaa_bold"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="25sp" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_badge_layout"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        app:cardBackgroundColor="@color/primary_color"
        app:cardCornerRadius="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_selection_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/comfortaa_bold"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
